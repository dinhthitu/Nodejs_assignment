<%- include('layout') %>
<h2>Inbox</h2>
<form id="deleteForm">
    <table>
        <thead>
            <tr>
                <th>Select</th>
                <th>Sender</th>
                <th>Subject</th>
                <th>Time Received</th>
            </tr>
        </thead>
        <tbody>
            <% emails.forEach(email => { %>
                <tr>
                    <td><input type="checkbox" name="emailIds" value="<%= email.id %>"></td>
                    <td><%= email.senderName %></td>
                    <td><a href="/email/<%= email.id %>"><%= email.subject || '(no subject)' %></a></td>
                    <td><%= email.timeReceived %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <button type="button" id="deleteButton">Delete</button>
</form>
<div class="pagination">
    <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="/inbox?page=<%= i %>"><%= i %></a>
    <% } %>
</div>

